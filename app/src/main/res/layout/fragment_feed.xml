<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feed.FeedFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your trips"
            android:textColor="#121212"
            android:textSize="24sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/headerIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_rocket" />
    </LinearLayout>

    <!-- Subheader -->
    <TextView
        android:id="@+id/subHeaderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/subtext_for_your_trips"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter Section -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintTop_toBottomOf="@id/subHeaderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date Picker Filter -->
        <TextView
            android:id="@+id/filterDate"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:textSize="10sp"
            android:layout_marginLeft="16dp"
            android:text="Select Date"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:background="@drawable/filter_bg"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="16dp" />

        <!-- Distance Filter -->
        <TextView
            android:id="@+id/filterDistance"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:textSize="10sp"
            android:text="Distance"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/filter_bg"
            android:drawablePadding="16dp"
            android:maxLines="1"
            android:drawableEnd="@drawable/ic_down_arrow"
             />

        <!-- Time Travelled Filter -->
        <TextView
            android:id="@+id/filterTime"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:text="Time Travelled"
            android:textColor="#000000"
            android:padding="12dp"
            android:maxLines="1"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/filter_bg"
            android:drawablePadding="16dp"
            android:drawableEnd="@drawable/ic_down_arrow"
           />
    </LinearLayout>

    <!-- Zero trips text -->
    <TextView
        android:id="@+id/tvZeroTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zero_trips_found"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterContainer" />

    <!-- RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/trip_info_card" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
