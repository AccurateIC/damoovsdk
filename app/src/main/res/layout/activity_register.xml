<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.register.RegisterActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingTop="60dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:elevation="6dp"
                android:padding="10dp"
                android:src="@drawable/ic_neurofleet_logo" />
            <TextView
                android:id="@+id/appNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museomodernomedium"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_app_name"
                android:text="Neurofleet"
                android:textColor="#FF000080"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:text="by ACCURATE"
                android:textColor="#FF0000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:text="Welcome Back, Road Warrior!"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:alpha="0.8"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text="@string/sign_in_to_track_your_trips_and_scores"
                android:textColor="#898989"
                android:textSize="14sp" />

            <!-- Email Label -->
            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:textColor="#666666"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginBottom="4dp" />

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailEdtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/emailid"
                    android:textColor="#000000"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:textColorHint="#898989"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Password Label -->


            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:visibility="gone"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:textColor="#666666"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginBottom="4dp" />

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameEdtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:endIconTint="#898989"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enteryourname"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/bg_card"
                    android:textColorHint="#898989"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Number Label -->
            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:textColor="#666666"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!-- Phone Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneEdtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#898989"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/pwdTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:textColor="#666666"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginBottom="4dp" />

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwdEdtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#898989"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pwdEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:textColorHint="#898989"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Password Label -->
            <TextView
                android:id="@+id/repwdTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:visibility="gone"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:textColor="#666666"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginBottom="4dp" />

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/repwdEdtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:endIconTint="#898989"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repwdEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repassword"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/bg_card"
                    android:textColorHint="#898989"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/regBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_login_bg"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />



        </LinearLayout>
    </ScrollView>
</RelativeLayout>
