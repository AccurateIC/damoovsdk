<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tripCardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/trip_bg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:textSize="16sp"
        android:textColor="#898989"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Date at top-left -->
    <TextView
        android:id="@+id/tripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Oct"
        android:textSize="14sp"
        android:textColor="#898989"
        android:layout_gravity="start" />

    <!-- Top section: Source - Icons - Destination -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tripInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <!-- Source Info -->
        <LinearLayout
            android:id="@+id/sourceInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/centerIcons"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sourceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textSize="24sp"
                    android:textColor="#121212"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sourceAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textSize="16sp"
                    android:textColor="#121212" />
            </LinearLayout>

            <TextView
                android:id="@+id/sourceLocationMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pune"
                android:textSize="16sp"
                android:textColor="#121212"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/sourceLocationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maharashtra, India"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#898989" />
        </LinearLayout>

        <!-- Center Icons -->
        <LinearLayout
            android:id="@+id/centerIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/sourceInfo"
            app:layout_constraintEnd_toStartOf="@id/destInfo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/carIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_bluetruck" />

            <ImageView
                android:id="@+id/routeLine"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_line_distance" />

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="30 km"
                android:textColor="#121212" />
        </LinearLayout>

        <!-- Destination Info -->
        <LinearLayout
            android:id="@+id/destInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@id/centerIcons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/destTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="11:05"
                    android:textColor="#121212"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/destAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="AM"
                    android:textColor="#121212"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/destLocationMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                android:textSize="16sp"
                android:textColor="#121212"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/destLocationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maharashtra, India"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#898989"
                android:gravity="end" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
